
<div class="container-login100" style="background-image: url('/assets/bng.png');">
  <div class="wrap-login1000 p-l-55 p-r-55 p-t-65 p-b-54" style="background-color: #e0dbdb;">
    <p id="notice"><%= notice %></p>

    <%= link_to 'Logout',  destroy_user_session_path, method: :delete %>

    <h1>Posts</h1>
<div class="wrap-input100 validate-input">
    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.name %></td>
            <td><%= post.body %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
    <br>
 <button class="login100-form-btn">
    <%= link_to 'New Post', new_post_path %>
  </button>
</div>
</div>